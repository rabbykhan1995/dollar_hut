model Selling_rates{
  id Int @id @default(autoincrement())
  payeer Int @default(0)
  ethereum Int @default(0)
  litecoin Int @default(0) 
  dogecoin Int @default(0)
  perfectmoney Int @default(0)
  pyypl Int @default(0)
  shibcoin Int @default(0)
  tether Int @default(0)
  troncoin Int @default(0)
  webmoney Int @default(0)
}

model News {
  id        Int      @id @default(autoincrement())
  title     String
  content   String   @db.Text   // Use @db.Text for medium-length content or @db.LongText for very long content
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
